-content_for :title do
  Place Order
%h1 Place Order
=semantic_form_for @google_order, :html => { :onsubmit => "setUrchinInputCode(pageTracker);" } do |f|
  =f.inputs do
    %input{ :type => "hidden", :input_html => { :name => "analyticsdata", :value => ""} }
    =f.input :first_name, :input_html => { :class => 'first_name' }
    =f.input :last_name, :input_html => { :class => 'last_name' }
    =f.input :company_name, :input_html => { :class => 'company_name' }
    .colorpicker
    %input.default.button{ :type => 'button', :value => "Default", :data => { :field => 'input.color', :value => GoogleOrder.new.color } }
    =f.input :color, :input_html => { :class => "color" }
  %hr
  #preview
    %input.button{ :type => 'button', :value => "Update Preview" }
    %img
  %hr
  #actions
    %h2 To complete this order, click the Google Checkout button
    %input{ :type => "image",
            :name => "Google Checkout",
            :alt => "Fast checkout through Google",
            :src => "http://sandbox.google.com/checkout/buttons/checkout.gif?merchant_id=#{ ENV['CONNECC_GOOGLE_MERCHANT_ID'] }&w=180&h=46&style=trans&variant=text&loc=en_US",
            :height => "46",
            :width => "180"}
