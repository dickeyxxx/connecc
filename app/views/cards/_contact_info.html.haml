%h2 Contact Info
%dl
  -if @card.giver.facebook
    %dt Facebook
    %dd= link_to @card.giver.facebook, "http://" + @card.giver.facebook
  -if @card.giver.twitter
    %dt Twitter
    %dd= link_to @card.giver.twitter, "http://twitter.com/" + @card.giver.twitter.gsub(/@/,'')
  -if @card.giver.linkedin
    %dt LinkedIn
    %dd= link_to @card.giver.linkedin, "http://" + @card.giver.linkedin
  -if @card.giver.show_email
    %dt Email
    %dd= mail_to @card.giver.email
  -if @card.giver.web_site
    %dt Personal web site
    %dd= link_to @card.giver.web_site, @card.giver.web_site
  -if @card.giver.phone_number
    %dt Phone number
    %dd= @card.giver.phone_number
