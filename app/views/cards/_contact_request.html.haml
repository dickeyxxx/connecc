%h2 Have #{ @card.giver.first_name } get a hold of me
=semantic_form_for @contact_request, :url => contact_request_path(@card.code) do |f|
  =f.inputs do
    =f.input :email
    =f.input :message
    =f.input :send_me_a_copy, :as => :boolean, :required => true
  =f.buttons do
    =f.commit_button "Send to #{ @card.giver.first_name }"
