#breadcrumb
  =link_to "Admin", admin_path
  =">"
  =link_to "Users", admin_users_path
  =">"
  =link_to @user, admin_user_path(@user)
%h1
  %span= @user.to_s
  - if @user.admin
    %span.red (Admin)
%hr
.details
  -if @user.locked_at
    %p
      %label Locked at
      %span= @user.locked_at
  %p
    %label Name
    %span= @user.name
  %p
    %label Email
    %span= @user.email
  -if @user.phone_number
    %p
      %label Phone
      %span= @user.phone_number
  %p
    %label Created at
    %span= @user.created_at.to_s :long
  -unless @user.created_at == @user.updated_at
    %p
      %label Updated at
      %span= @user.updated_at.to_s :long
%hr
.lists
  -if @user.orders.any?
    .list
      %h2 Orders
      %ul
        -for order in @user.orders
          %li= link_to order, admin_order_path(order)
