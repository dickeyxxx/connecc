=link_to "Admin", admin_path
=">"
=link_to "Orders", admin_orders_path
- if @status
  %h1= "Orders #{ @status }"
- else
  %h1 Orders
%table
  %tr
    %th Order
    %th State
    %th User
    %th Authorization amount
    %th Google Order Number
  -for order in @orders
    %tr
      %td= link_to order, admin_order_path(order)
      %td= order.state
      %td= link_to order.user, admin_user_path(order.user) if order.user
      -if order.authorization_amount
        %td= "$" + sprintf("%.2f", order.authorization_amount) 
      -else
        %td
      %td= order.google_order_number
