=">"
=link_to "Orders", admin_orders_path
- if @status
  %h1= "Orders #{ @status }"
- else
  %h1 Orders
%table
  %tr
    %th Order
    %th User
    %th Financial State
    %th Fulfillment State
    %th Google Order Number
  -for order in @orders
    %tr
      %td= link_to order, admin_order_path(order)
      %td= link_to order.user, admin_user_path(order.user)
      %td= order.financial_order_state
      %td= order.fulfillment_order_state
      %td= order.google_order_number
