<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>conne.cc</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <link href="http://fonts.googleapis.com/css?family=Molengo:regular&amp;subset=latin" media="screen" rel="stylesheet" type="text/css" />
  <link href='http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag ["reset", "formtastic", "formtastic_changes", "style", "connecc"], :media => "all" %>
  <%= javascript_include_tag ["jquery-1.4.4.min", "modernizr-1.6.min", "jquery-css-transform", "site"] %>
  <%- if RAILS_ENV == 'development' %>
    <script src="http://localhost:8001/vogue-client.js" type="text/javascript"></script>
  <%- end %>

</head>

<body>
  <div id="container" class="">
    <header>
      <a href="/">conne.cc</a>
      <%- if current_user %>
        <%- if current_user.admin %>
          <a href="<%= admin_path %>">Admin Dashboard</a>
        <%- end %>
        <a href="<%= dashboard_path %>">Dashboard</a>
        <a href="<%= logout_path %>">Logout</a>
      <%- else %>
        <a href="<%= login_path %>">Login</a>
      <%- end %>
    </header>
    <%- if flash[:notice] %>
      <div id="notice">
        <%= flash[:notice] %>
      </div>
    <%- end %>
    <%- if flash[:alert] %>
      <div id="alert">
        <%= flash[:alert] %>
      </div>
    <%- end %>
    <div id="main">
      <div id="banner">
        
        <span id="name">
            conne.cc
            <span id="arrow">&gt;</span>
        </span>
        
        
        <!--<img src="/images/logo.small.png" />-->
        <div class="clearfix"></div>
      </div>
      <div class="bannerCurl"><div class="leftCurl"></div><div class="rightCurl"></div></div>

      <div id="strip">
        <%= content_for?(:content) ? yield(:content) : yield %>
      </div>
      <div class="stripCurl"><div class="leftCurl"></div><div class="rightCurl"></div></div>

      <div class="clearfix"></div>
    </div>

    <footer>
    <%= link_to "@connecc_cards", "http://twitter.com/connecc_cards" %> |
    <%= link_to "Privacy", privacy_policy_path %> |
    Copyright 2011
    </footer>

  </div>

  <script>
   var _gaq = [['_setAccount', 'UA-20311526-1'], ['_trackPageview']];
   (function(d, t) {
    var g = d.createElement(t),
        s = d.getElementsByTagName(t)[0];
    g.async = true;
    g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    s.parentNode.insertBefore(g, s);
   })(document, 'script');
  </script>

  <script type="text/javascript">
  var uservoiceOptions = {
    /* required */
    key: 'connecc',
    host: 'connecc.uservoice.com', 
    forum: '93547',
    showTab: true,  
    /* optional */
    alignment: 'left',
    background_color:'#f00', 
    text_color: 'white',
    hover_color: '#06C',
    lang: 'en'
  };

  function _loadUserVoice() {
    var s = document.createElement('script');
    s.setAttribute('type', 'text/javascript');
    s.setAttribute('src', ("https:" == document.location.protocol ? "https://" : "http://") + "cdn.uservoice.com/javascripts/widgets/tab.js");
    document.getElementsByTagName('head')[0].appendChild(s);
  }
  _loadSuper = window.onload;
  window.onload = (typeof window.onload != 'function') ? _loadUserVoice : function() { _loadSuper(); _loadUserVoice(); };
  </script>

</body>
</html>

