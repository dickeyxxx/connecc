-content_for :content do
  #main
    #banner
      #name
        =link_to "conne.cc", root_path
        %span#arrow= h(">")
    #strip
      -if flash[:notice]
        #notice
          =flash[:notice]
      -if flash[:alert]
        #notice
          =flash[:alert]
      =yield
      -unless @hide_tip
        %hr
          .seg
            %p Connections are fragile in their early stages, let's make them flow.
    .stripCurl
      .leftCurl
      .rightCurl
    .clearfix
=render :file => 'layouts/application'

