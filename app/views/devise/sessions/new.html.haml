%h2 Log in
=semantic_form_for resource, :url => user_session_path(:return_to => params[:return_to]) do |f|
  =f.inputs do
    =f.input :email
    =f.input :password
    =f.input :remember_me, :as => :boolean, :required => true
  =f.buttons do
    =f.commit_button "Log in"
    %span.alt or #{ link_to "Forgot password?", new_user_password_path }
