.seg
  %h2 Sign in
  =semantic_form_for resource, :url => login_path do |f|
    =f.inputs do
      =f.input :email
      =f.input :password
      - if devise_mapping.rememberable?
        = f.input :remember_me, :as => :boolean, :required => true
    =f.buttons do
      =f.commit_button "Log in"
      =link_to "Forgot password?", account_password_forgot_path
