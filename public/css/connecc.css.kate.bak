/* connecc.css */

html { 
    background-color:#E6E7E8;    
}

html, #container {
    background-image:url("../images/noise.darker.gif");
    background-repeat:repeat;
}

body {
    background-color: #E6E7E8;
    font-family:"Molengo";
    line-height:1.3;
}

header {
    background-color:#1D4088;
    color:#fff;
    font-size:20px;
    padding:8px;
    
    -webkit-border-bottom-right-radius: 5px;
    -webkit-border-bottom-left-radius: 5px;
    -moz-border-radius-bottomright: 5px;
    -moz-border-radius-bottomleft: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
    
    border-left: 1px solid black;
    border-right: 1px solid black;
    border-bottom: 1px solid black;
}

header a, header a:visited {
    color:#fff;
    text-decoration:none;
}

header a:hover {
    color:#fff;
    text-decoration:underline;
}

#banner, footer {
    text-align:center;
}

#main {
    width:620px;
    margin:24px auto 0 auto;
}

#banner, #strip {
    background-color:#ccc;
    border:1px solid #bbb;
    border-bottom:1px dashed #999;
    border-top:1px dashed #ddd;
}

#banner {
    width:300px;
    margin:0 auto;

    z-index:10;
    margin-bottom:-10px;
    padding:6px;
    
    font-size:28pt;
    text-shadow:0 1px 0 #e5e5e5;
    position:relative;
}

#strip hr {
    border-top:1px dashed #888;
    border-bottom:1px dashed #fff;
    height:0;
    width:100%;
    position:relative;
}

#strip {
    padding:16px 0;
    position:relative;
    z-index:5;
}

#strip p {
    margin:16px 8px;
}

#name {
    font-weight:bold;
    margin-top:10px;
}

#arrow {
    font-size:80px;
    font-weight:bold;
    color:#133CAC;
    text-shadow:0 1px 0 #e5e5e5;
}

.bannerCurl {
    margin:0 auto;
    width:300px;
    position:relative;
    top:-20px;
    z-index:8;
}

.stripCurl {
    z-index:0;
    width:620px;
    position:relative;
    top:-25px;
}

.leftCurl, .rightCurl {
    -webkit-box-shadow: 0px 6px 30px black;
    -moz-box-shadow: 0px 6px 30px black;
    box-shadow: 0px 6px 30px black;
    width:200px;
    height:15px;
    position:absolute;
    bottom:-40;
}

.leftCurl {
    left:10px;
    
    -moz-transform:rotate(-4deg);
    -webkit-transform:rotate(-4deg);
    -o-transform:rotate(-4deg);
    -ms-transform:rotate(-4deg);
    transform:rotate(-4deg);
}

.rightCurl {
    right:10px;
    
    -moz-transform:rotate(4deg);
    -webkit-transform:rotate(4deg);
    -o-transform:rotate(4deg);
    -ms-transform:rotate(4deg);
    transform:rotate(4deg);
}

footer {
    color:#444;
}

#pitch, #signup {
    text-align:center;
}

#pitch h1, #signup h1 {
    font-size:28px;
    text-shadow:0 1px 0 #e5e5e5;
    margin:12px 0;
    color:#333;
}

#pitch h2, #signup h2 {
    font-size:20px;
    font-family:"Droid Serif";
    text-shadow:0 1px 0 #e5e5e5;
    margin:10px 32px;
}









#card-container {
    margin: 100px auto;
    width:550px;
    height:310px;
    position:relative;
}
.card {
    width:550px;
    font-size:18px;
    border:1px solid black;
    background-color:white;
    cursor:default;
}
#card-container .card {
    height:310px;
    position:absolute;
    top:0px;
    left:0px;
    cursor:pointer;
}
.card .top-half {
    height:150px;
    border-bottom:1px dashed black;
    position:relative;
}
.card .bottom-half {
    position:relative;
    height:150px;
}
.card span {
    display:block;
    margin-left:20px;
    margin-top:5px;
    margin-bottom:5px;
}
.card .connecc {
    color:blue;
}
.card .arrow {
    font-weight:bold;
    font-size:170px;
    right:15px;
    top:-40px;
    color:#1D4088;
    position:absolute;
}
#bottom-card {
    -webkit-transform:rotate(2deg);
    -moz-transform:rotate(2deg);
    z-index:1;
}
#middle-card {
    -webkit-transform:rotate(1deg);
    -moz-transform:rotate(1deg);
    z-index:2;
}
#top-card {
    z-index:3;
}
#half-card {
    margin-left:auto;
    margin-right:auto;
    margin-top:100px;
    margin-bottom:100px;
    position:relative;
    height:150px;
    -webkit-transform:rotate(-2deg);
    -moz-transform:rotate(-2deg);
}
